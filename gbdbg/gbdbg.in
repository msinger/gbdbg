#!/bin/bash

prefix=@prefix@
exec_prefix=@exec_prefix@
libdir=@libdir@
libexecdir=@libexecdir@

MONO_EXEC="exec -a gbdbg mono"
EXE_PATH="${libexecdir}/@PACKAGE@/gbdbg.exe"

FORCE_DEBUG=yes
REDIRECT_LOG="${XDG_CONFIG_HOME:-$HOME/.config}/@PACKAGE@/server_log"

for arg in "$@"; do
	case "x$arg" in
		x--profile*)
			MONO_OPTIONS+=("$arg")
			shift
			;;
		x--debug*)
			unset FORCE_DEBUG
			MONO_OPTIONS+=("$arg")
			shift
			;;
		x--trace*)
			MONO_OPTIONS+=("$arg")
			shift
			;;
		x--no-log)
			unset REDIRECT_LOG
			shift
			;;
		x--no-debug)
			unset FORCE_DEBUG
			shift
			;;
		xdebug)
			unset FORCE_DEBUG
			MONO_OPTIONS+=("--debug")
			ARGS+=("debug")
			shift
			;;
		*)
			ARGS+=("$arg")
			shift
			;;
	esac
done

if [ -z FORCE_DEBUG ]; then
	MONO_OPTIONS+=("--debug")
fi

if [ -n "${MONO_OPTIONS[0]}" ]; then
	echo "** Running with Mono options: ${MONO_OPTIONS[@]} **"
fi

if [ -n "$REDIRECT_LOG" ]; then
	mkdir -p `dirname "$REDIRECT_LOG"`
	$MONO_EXEC "${MONO_OPTIONS[@]}" "$EXE_PATH" "${ARGS[@]}" 2>&1 | tee "$REDIRECT_LOG"
else
	$MONO_EXEC "${MONO_OPTIONS[@]}" "$EXE_PATH" "${ARGS[@]}"
fi
